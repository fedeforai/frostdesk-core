{
  "name": "frostdesk-core",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "description": "Core repository for Frostdesk project",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter '@frostdesk/db' --filter '@frostdesk/api' -r run build",
    "dev": "pnpm --filter '@frostdesk/db' --filter '@frostdesk/api' -r --parallel run dev",
    "dev:instructor": "bash scripts/dev-instructor.sh",
    "dev:admin": "bash scripts/dev-admin.sh",
    "test": "echo 'Add test scripts'",
    "dev:web": "pnpm -C apps/web dev",
    "verify:pnpm": "bash scripts/verify_repo.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "dotenv": "^16.6.1",
    "resolve-pkg-maps": "^1.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0"
  }
}